@model IEnumerable<ProjCineWeb.Model.Ingresso>

@{
    ViewData["Title"] = "Index";
}

<h1>Ingressos</h1>

<p>
    <a asp-action="Create">
        <input type="submit" value="Cadastrar Ingresso" class="btn btn-dark" />
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.NomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme.NomeFilme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filme.NomeFilme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHora)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <input type="submit" value="Editar" class="btn btn-secondary" />
                </a>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <input type="submit" value="Detalhes" class="btn btn-info" />
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
