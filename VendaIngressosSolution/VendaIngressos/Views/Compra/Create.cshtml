@model ProjIngresso.Models.Compra

@{
    ViewData["Title"] = "Create";
}

<h1>Compra de Ingresso</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Torcedor" class="control-label"></label>
                <select asp-for="Torcedor" id="Torcedor" name="Torcedor" asp-items="@Model.Torcedores" class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Torcedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingresso" class="control-label"></label>
                <select asp-for="Ingresso" id="Ingresso" name="Ingresso" asp-items="@Model.Ingressos" class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Ingresso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Comprar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <input type="submit" value="Voltar" class="btn btn-dark" />
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
