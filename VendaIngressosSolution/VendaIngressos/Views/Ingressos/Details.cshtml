@model ProjIngresso.Models.Ingresso

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Ingresso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            R$
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Setor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Setor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Jogo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Jogo.TimeA.NomeTime)
            x
            @Html.DisplayFor(model => model.Jogo.TimeB.NomeTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
        </dd>
        <dt class="col-sm-2">
            Imagem
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/image/" + Model.Imagem)" asp-append-version="true" width="400px" height="200px" />
        </dd>
    </dl>
</div>
<div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">
            <input type="submit" value="Editar Ingresso" class="btn btn-primary" />
        </a>
        <a asp-action="Index">
            <input type="submit" value="Voltar" class="btn btn-dark" />
        </a>
    </div>
</div>
