@model IEnumerable<ProjIngresso.Models.Ingresso>

@{
    ViewData["Title"] = "Index";
}

<h1>Ingressos</h1>

<p>
    <a asp-action="Create">
        <input type="submit" value="Cadastrar Ingresso" class="btn btn-dark" />
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Setor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    R$
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Setor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jogo.TimeA.NomeTime)
                    x
                    @Html.DisplayFor(modelItem => item.Jogo.TimeB.NomeTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Imagem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <input type="submit" value="Editar" class="btn btn-secondary" />
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <input type="submit" value="Detalhes" class="btn btn-info" />
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <input type="submit" value="Excluir" class="btn btn-danger" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
