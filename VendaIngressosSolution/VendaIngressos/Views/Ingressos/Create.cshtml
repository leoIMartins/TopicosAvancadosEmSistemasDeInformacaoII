@model ProjIngresso.Models.Ingresso

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ingresso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Setor" class="control-label"></label>
                <input asp-for="Setor" class="form-control" />
                <span asp-validation-for="Setor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jogo" class="control-label"></label>
                <select asp-for="Jogo" id="Jogo" name="Jogo" asp-items="@Model.Jogos" class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Jogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemIngresso" class="control-label"></label>
                <input asp-for="ImagemIngresso" class="form-control" />
                <span asp-validation-for="ImagemIngresso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
