@model IEnumerable<ProjIngresso.Models.Jogo>

@{
    ViewData["Title"] = "Index";
}

<h1>Jogos</h1>

<p>
    <a asp-action="Create">
        <input type="submit" value="Cadastrar Jogo" class="btn btn-dark" />
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeEstadio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataJogo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeA.NomeTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeB.NomeTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeEstadio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataJogo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <input type="submit" value="Editar" class="btn btn-secondary" />
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <input type="submit" value="Detalhes" class="btn btn-info" />
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <input type="submit" value="Excluir" class="btn btn-danger" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
